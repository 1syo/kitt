#!/bin/sh

set -e

npm install
export PATH="node_modules/.bin:node_modules/hubot/node_modules/.bin:$PATH"

#
# Configure
#
export HUBOT_HEROKU_KEEPALIVE_INTERVAL=30
export HUBOT_HEROKU_KEEPALIVE_URL=${HEROKU_URL}
export HUBOT_LETS_PARTY_BE_QUIET=true
export HUBOT_LETS_PARTY_ROOM=${HUBOT_HIPCHAT_ROOMS}
export TZ=Asia/Tokyo

exec node_modules/.bin/hubot --name "kitt" "$@"
